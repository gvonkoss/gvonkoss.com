title: Writing
---

<ul class="content__list content__list--post">
  {%- for post in collections.post | reverse -%}
    <li class="content__list__item">
      <div>
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <span>{{ post.date | readableDate }}</span>
        <p>{{ post.data.description }}</p>
      </div>
    </li>
  {%- endfor -%}
</ul>
